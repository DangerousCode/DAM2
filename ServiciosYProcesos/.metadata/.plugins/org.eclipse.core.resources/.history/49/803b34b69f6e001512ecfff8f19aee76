package calculos;

public class Calculos {

	public static void main(int[] args) throws InterruptedException{
		int hilos=20;
		int numeros=0;
		
		while(hilos>0){
			if(args[0]%hilos==0){
				numeros=args[0]/hilos;
				break;
			}
			hilos--;
		}
		
		Suma suma=new Suma();
		if(hilos!=1){
			Hilo[] hilo=new Hilo[hilos];
			for(int j=0;j<hilo.length;j++){
				hilo[j]=new Hilo(numeros, suma);
			}
			for(int k=0;k<hilo.length;k++){
				hilo[k].start();
			}
			for(int m=0;m<hilo.length;m++){
				hilo[m].join();
			}
		}
		else{
			Hilo hilo=new Hilo(numeros,suma);
			hilo.start();
			hilo.join();
		}
		
		
	}

}
